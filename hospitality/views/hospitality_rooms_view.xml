<?xml version="1.0"?>
<odoo>
    <!-- ________________________Actions__________________________________ -->
    <record id="hospitality_room_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hospitality.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records Found!!!! Please create a new record.
            </p>
        </field>
    </record>

    <!-- ________________________Tree View__________________________________ -->
    <record id="room_view_tree" model="ir.ui.view">
        <field name="name">room.tree</field>
        <field name="model">hospitality.room</field>
        <field name="arch" type="xml">
            <tree string="Rooms">
                <field name="room_no" />
                <field name="room_type" />
                <field name="room_charges" />
            </tree>
        </field>
    </record>

    <!-- _____________________________Form__________________________ -->

    <record id="room_view_form" model="ir.ui.view">
        <field name="name">room.form</field>
        <field name="model">hospitality.room</field>
        <field name="arch" type="xml">
            <form string="Rooms">
                <sheet>
                    <group>
                        <field name="room_no" />
                        <field name="room_type" />
                        <field name="room_charges" />
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>