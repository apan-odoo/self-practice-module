<?xml version="1.0"?>
<odoo>


    <!-- _________________________Tree________________________ -->
    <record id="hotel_staff_view_tree" model="ir.ui.view">
        <field name="name">hotel.staff.tree</field>
        <field name="model">hotel.staff</field>
        <field name="arch" type="xml">
            <tree string="Staffs">
                <field name="department_id" />
                <field name="department" />
                <field name="staff_no" />
            </tree>
        </field>
    </record>


    <!-- _____________________________Form__________________________ -->

    <record id="hotel_staff_view_form" model="ir.ui.view">
        <field name="name">hotel.staff.from</field>
        <field name="model">hotel.staff</field>
        <field name="arch" type="xml">
            <form string="Staffs">
                <sheet>
                    <group>
                        <field name="department_id" string="Deparment ID"/>
                        <field name="department" />
                        <field name="staff_no" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>