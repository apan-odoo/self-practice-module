<?xml version="1.0"?>
<odoo>
    <!-- ________________________Actions__________________________________ -->
    <record id="hospitality_guest_action" model="ir.actions.act_window">
        <field name="name">Guests</field>
        <field name="res_model">hospitality.guest</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records Found!!!! Please create a new record.
            </p>
        </field>
    </record>

    <!-- ________________________Tree View__________________________________ -->
    <record id="guest_view_tree" model="ir.ui.view">
        <field name="name">guest.tree</field>
        <field name="model">hospitality.guest</field>
        <field name="arch" type="xml">
            <tree string="Guests">
                <field name="name" />
                <field name="guest_id_type" />
                <field name="gender" />
                <field name="vehicle" />
            </tree>
        </field>
    </record>

    <!-- _____________________________Form__________________________ -->

    <record id="guest_view_form" model="ir.ui.view">
        <field name="name">guest.form</field>
        <field name="model">hospitality.guest</field>
        <field name="arch" type="xml">
            <form string="Guests">
                <sheet>
                    <h1>
                        <field name="name" placeholder="eg:Name" />
                    </h1>
                    <group>
                        <group>
                            <field name="guest_id_type" />
                            <field name="guest_id_no" />
                            <field name="gender" />
                        </group>
                        <group>
                            <field name="vehicle" />
                            <field name="vehicle_type"
                                attrs="{'invisible': [('vehicle', '=', False)]}" />
                            <field name="vehicle_no"
                                attrs="{'invisible': [('vehicle', '=', False)]}" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Rseservation Info" >
                            <field name="guest_reservation_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>