<?xml version="1.0"?>
<odoo>
    <!-- ________________________Actions__________________________________ -->
    <record id="hospitality_hotel_action" model="ir.actions.act_window">
        <field name="name">Hotels</field>
        <field name="res_model">hospitality.hotel</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records Found!!!! Please create a new record.
            </p>
        </field>
    </record>

    <!-- ________________________Tree View__________________________________ -->
    <record id="hotel_view_tree" model="ir.ui.view">
        <field name="name">hotel.tree</field>
        <field name="model">hospitality.hotel</field>
        <field name="arch" type="xml">
            <tree string="Hotels">
                <field name="name" />
                <field name="city" />
                <field name="state" />
                <field name="zip_code" />
                <field name="phone" />
            </tree>
        </field>
    </record>

    <!-- _____________________________Form__________________________ -->

    <record id="hotel_view_form" model="ir.ui.view">
        <field name="name">hotel.form</field>
        <field name="model">hospitality.hotel</field>
        <field name="arch" type="xml">
            <form string="Hotels">
                <sheet>
                    <h1>
                        <field name="name" placeholder="eg: Name" />
                    </h1>
                    <group>
                        <group>
                            <!-- <field name="address" /> -->
                            <field name="city" />
                            <field name="state" />
                            <field name="zip_code" />
                        </group>
                        <group>
                            <field name="phone" />
                            <field name="email" />
                            <field name="website" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Staffs">
                            <field name="staff_ids"/>
                        </page>
                        <page string="Rooms">
                            <field name="room_ids"/>
                        </page>
                        <page string="Reservations">
                            <field name="reservation_ids"/>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>