<?xml version="1.0"?>
<odoo>
    <!-- ________________________Actions__________________________________ -->
    <record id="hospitality_manage_action" model="ir.actions.act_window">
        <field name="name">Manage</field>
        <field name="res_model">hospitality.manage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records Found!!!! Please create a new record.
            </p>
        </field>
    </record>

    <!-- ________________________Tree View__________________________________ -->
    <record id="manage_view_tree" model="ir.ui.view">
        <field name="name">manage.tree</field>
        <field name="model">hospitality.manage</field>
        <field name="arch" type="xml">
            <tree string="Manage">
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- _____________________________Form__________________________ -->

    <record id="manage_view_form" model="ir.ui.view">
        <field name="name">manage.form</field>
        <field name="model">hospitality.manage</field>
        <field name="arch" type="xml">
            <form string="Manage">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>